<!-- Views/Usuario/Inserir.cshtml -->
@{
    ViewData["Title"] = "Inserir Usuário";
}

<h2>Inserir Usuário</h2>

<!-- Alteração: Definir a rota para o controlador correto -->
<form asp-controller="Usuario" asp-action="Salvar" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" required />
    </div>
    <div class="form-group">
        <label for="Idade">Idade</label>
        <input type="number" class="form-control" id="Idade" name="Idade" required />
    </div>
    <div class="form-group">
        <label for="Peso">Peso</label>
        <input type="number" step="0.1" class="form-control" id="Peso" name="Peso" required />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
